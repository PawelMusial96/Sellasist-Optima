@page
@model Sellasist_Optima.Pages.ZTest.Ordertest308Model
@{
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Zamówienia i tworzenie dokumentu 308</title>
</head>
<body>
    <h2>Pobierz zamówienia z Sellasist według statusu</h2>


    <!-- pobiera WSZYSTKIE zamówienia i tworzy 308 -->
    <form method="post" asp-page-handler="DownloadAndCreateDocs">
        <div>
            <label for="SelectedStatusId">Wybierz status:</label>
            <select asp-for="SelectedStatusId" asp-items="Model.StatusList"></select>
        </div>
        <button type="submit" style="color: white; background-color: green;">
            Pobierz wszystkie zamówienia i utwórz 308
        </button>
    </form>

    @if (!string.IsNullOrEmpty(Model.ResultMessage))
    {
        <p style="color:blue">
            <strong>Info:</strong> @Model.ResultMessage
        </p>
    }
</body>
</html>
