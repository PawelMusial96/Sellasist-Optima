@model Sellasist_Optima.Pages.Zamówienia.SalesOrdersModel
<h2>Tworzenie RO</h2>

@if (!string.IsNullOrEmpty(Model.Message))
{
    <div class="alert alert-info">@Model.Message</div>
}

<form method="post" asp-page-handler="FetchOrders">
    <div>
        <label>Wybierz Status:</label>
            <select name="SelectedStatusId" class="form-control">
            @foreach (var status in Model.Statuses)
            {
                <option value="@status.Id">@status.Name</option>
            }
        </select>
    </div>
    @*< input type="submit" value="Fetch Orders" /> *@
    <form method="post" asp-page-handler="CreateSalesOrders">
        <input type="hidden" asp-for="SelectedStatusId" />
        <input type="submit" value="Create Sales Orders in WebAPI" />
    </form>
</form>

